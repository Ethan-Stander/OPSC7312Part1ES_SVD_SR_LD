<!-- res/drawable/custom_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Transparent background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <!-- Green outline shape -->
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/green" /> <!-- Green outline color -->
            <corners android:radius="22dp" /> <!-- Adjust the radius for rounded edges -->
        </shape>
    </item>
</layer-list>
