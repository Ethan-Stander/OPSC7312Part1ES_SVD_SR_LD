<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sensor_adjustment_fragment">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=" status"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"/>


    <TextView

        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_bg"
        android:text="WARNING TURN LIGHT UP !"
        android:textSize="20sp"
        android:padding="15dp"
        android:textColor="@color/white"/>


    <TextView
        android:id="@+id/textViewOptimalRange"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewMessage"
        android:layout_centerHorizontal="true"
        android:text="Optimal range(Â°C): 18.3-25"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>


    <SeekBar
        android:id="@+id/adjSlider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewOptimalRange"
        android:layout_marginTop="20dp"
        android:max="100"
        android:progress="50"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp" />

</RelativeLayout>