<!-- list_item_layout.xml -->

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:id="@+id/NearbyStoresItemView"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/dark_mode_cards">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNearbyStoreItemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Name"
                android:textColor="@color/dark_green.white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/txtNearbyStoreRating"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rating: "
                android:textColor="@color/light_grey.offwhite"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtNearbyStoreOperational"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Operational: "
                android:textColor="@color/light_grey.offwhite"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/txtNearbyStoreisOpen"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Open Now: "
                android:textColor="@color/light_grey.offwhite"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btnNearbyStoresDirections"
                android:text="Directions"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:background="@drawable/leaf_button"
                android:textSize="12dp"/>
            <Button
                android:id="@+id/btnNearbyStoresAddtoMyStores"
                android:text="Add to my stores"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:background="@drawable/leaf_button"
                android:textSize="12dp"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>

