<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment"
    android:theme="@style/Theme.SettingsPage">

    <!--[Waves]-->
    <com.scwang.wave.MultiWaveHeader
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleY="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mwhCloseColor="@color/dark_green"
        app:mwhGradientAngle="45"
        app:mwhStartColor="@color/dark_green"
        app:mwhWaveHeight="60dp"
        app:mwhWaves="MultiWave"/>

    <Button
        android:id="@+id/settings_account"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/rounded_button_corners"
        android:drawableRight="@drawable/ic_arrowright"
        android:text="Account"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/settings_text_color"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:drawableTint="@color/settings_arrow_color"/>

    <Button
        android:id="@+id/settings_measurements"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button_corners"
        android:drawableRight="@drawable/ic_arrowright"
        android:text="Measurements"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/settings_text_color"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:drawableTint="@color/settings_arrow_color"/>

    <Button
        android:id="@+id/settings_appsettings"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/rounded_button_corners"
        android:drawableRight="@drawable/ic_arrowright"
        android:text="App Settings"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/settings_text_color"
        android:textSize="25dp"
        android:textStyle="bold"
        app:flow_wrapMode="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:drawableTint="@color/settings_arrow_color"/>

</androidx.constraintlayout.widget.ConstraintLayout>