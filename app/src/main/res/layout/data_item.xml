<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    android:layout_margin="10dp"
    android:backgroundTint="@color/dark_mode_cards">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/headerLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvDataFarmName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Farm Name"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvTimeCalled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time"
                android:layout_marginBottom="5dp"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:id="@+id/viewDivider"
            android:layout_below="@id/headerLinearLayout"
            android:layout_width="250dp"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:background="@color/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textStyle="bold"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temperature"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textStyle="bold"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Humidity"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LightLevel"
                android:textStyle="bold"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvLightLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LightLevel"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlowRate"
                android:textStyle="bold"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvFlowRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FlowRate"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH"
                android:textStyle="bold"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvpH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pH"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EC"
                android:textStyle="bold"
                android:textColor="@color/dark_green.white"/>
            <TextView
                android:id="@+id/tvEC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EC"
                android:textColor="@color/light_grey.offwhite"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>