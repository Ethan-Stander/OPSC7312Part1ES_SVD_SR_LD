<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--ORIGINAL THEME-->
    <style name="Theme.OPSC7312Part1" parent="Theme.MaterialComponents.Light.DarkActionBar" >
    <!-- Base application theme. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/dark_green</item>
    </style>
    <style name="Base.Theme.OPSC7312Part1" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <!--SETTINGS THEME-->
    <style name="Theme.SettingsPage" parent="Theme.MaterialComponents.Light.DarkActionBar" >
        <item name="colorPrimary">#D9D9D9</item>
    </style>

    <!--GREEN THEME-->
    <style name="Theme.GreenTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" >
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <!--LOGIN THEME-->
    <style name="Theme.LoginPage" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Base application theme. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/dark_green</item>
    </style>
    <style name="Base.Theme.LoginPage" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/dark_green</item>
    </style>
    <style name="Theme.LoginPage_Dark" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Base application theme. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/dark_green</item>
        <item name="android:backgroundTint">@color/dark_mode_green</item>
    </style>

    <!--DROPDOWN THEME-->
    <style name="DropdownTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/dark_green</item>
        <item name="hintTextColor">@color/dark_green</item>
    </style>
    <style name="GreenCursor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <style name="GreenTextBoxCursor">
        <item name="colorPrimary">@color/dark_green</item>
    </style>

    <!--DIALOG ALERTS-->
    <style name="settings_custom_popups" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--COLORS-->
    <color name="sub_header_color">@color/settings_grey</color>
    <color name="settings_text_color">@color/dark_green</color>
    <color name="settings_arrow_color">@color/light_grey</color>
    <color name="dark_mode_text">@color/black</color>
    <color name="dark_mode_cards">@color/white</color>
    <color name="dark_mode_popups">@color/white</color>
    <color name="divider_line">#DDD5D5</color>
    <color name="dark_mode_headers">@color/dark_green</color>
    <color name="light_grey.white">@color/light_grey</color>
    <color name="black.light_grey">@color/black</color>

</resources>