
<resources>
    <style name="buttonTextStyle">
        <item name="android:textColor">#00FF00</item> <!-- Green text color -->
        <item name="android:textStyle">bold</item> <!-- Bold text style -->
    </style>

    <!--[LIGHT THEME]-->
    <style name="AppTheme_Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/dark_green</item>
        <item name="boxStrokeColor">@color/dark_green</item>
    </style>

    <!--[DARK THEME]-->
    <style name="AppTheme_Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:backgroundTint">@color/grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--LOGIN THEME-->
    <style name="Theme.LoginPage_Dark" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <!-- Base application theme. -->
        <item name="colorPrimary">@color/dark_green</item>
        <item name="android:statusBarColor">@color/grey</item>
        <item name="android:backgroundTint">@color/grey</item>
    </style>

</resources>
